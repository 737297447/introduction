<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/introduction_fragment_default_content_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="3"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/white"
        app:layout_heightPercent="25%"
        app:layout_marginBottomPercent="1%"
        app:layout_marginTopPercent="1%"
        tools:text="Title" />

    <ImageView
        android:id="@+id/introduction_fragment_default_content_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/introduction_fragment_default_content_title"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        app:layout_heightPercent="44%"
        tools:ignore="ContentDescription" />

    <FrameLayout
        android:id="@+id/introduction_fragment_default_content_description_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/introduction_fragment_default_content_image"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layout_heightPercent="26%"
        app:layout_marginBottomPercent="1%"
        app:layout_marginTopPercent="2%" />

</android.support.percent.PercentRelativeLayout>